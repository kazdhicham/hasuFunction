{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    "src/login.js",
    "src/index.js"
  ],
  "exclude": [
    "node_modules/**/*.ts"
  ]
}